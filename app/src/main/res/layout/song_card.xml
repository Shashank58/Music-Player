<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/songCard"
    app:cardElevation="5dp"
    android:foreground="?android:selectableItemBackground"
    android:alpha="0.6"
    android:layout_marginTop="0.25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/black_800"
        android:id="@+id/song_container">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/song_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/song_title"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/song_image"
            android:layout_toEndOf="@+id/song_image"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:textStyle="bold"
            android:gravity="start"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/song_artist"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_below="@+id/song_title"
            android:layout_toRightOf="@+id/song_image"
            android:layout_toEndOf="@+id/song_image"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:gravity="start"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_playlist_add_white_36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>