<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/song_card_black"
             tools:context="cybrilla.musicplayer.android.SongDetailActivity">


        <android.support.v7.widget.Toolbar
            android:background="@color/pure_black"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/playing_song_detail_toolbar"
            android:elevation="4dp"
            android:visibility="visible"
            android:transitionName="songBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_selected_track"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/playing_song_detail_toolbar"
            android:layout_above="@+id/detail_controls_layout"
            android:src="@drawable/song_image"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/detail_controls_layout"
            android:background="@color/pure_black"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/detail_pause"
                android:src="@android:drawable/ic_media_pause"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/detail_fast_forward"
                android:src="@android:drawable/ic_media_ff"
                android:layout_toRightOf="@+id/detail_pause"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/detail_reverse"
                android:src="@android:drawable/ic_media_rew"
                android:layout_toLeftOf="@+id/detail_pause"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

</RelativeLayout>
