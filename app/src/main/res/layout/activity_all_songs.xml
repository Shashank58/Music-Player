<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllSongsActivity"
    android:orientation="vertical"
    android:background="@drawable/all_songs_bg">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/all_songs_toolbar"
        app:elevation="4dp"
        android:background="#EF6C00">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music Player"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/connect"
                android:src="@drawable/ic_connect"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                android:layout_toLeftOf="@+id/connect"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:id="@+id/songList">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/playing_song_toolbar"
        app:elevation="4dp"
        android:background="@color/white"
        android:visibility="gone"
        android:transitionName="songBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/selected_album_cover"
                android:src="@drawable/ic_action_ic_default_cover"/>

            <TextView
                android:id="@+id/selected_track_title"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:textColor="@color/pure_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/player_control"
                android:layout_gravity="end"
                android:layout_width="55dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="55dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</LinearLayout>
