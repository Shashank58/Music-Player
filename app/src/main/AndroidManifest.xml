<?xml version="1.0" encoding="utf-8"?>
<manifest package="cybrilla.musicplayer"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- <service android:name="cybrilla.musicplayer.MusicService"/> -->
        <activity
            android:name=".android.SongDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_song_detail"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity android:name=".android.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".album.AlbumSongActivity">
        </activity>

        <service
            android:name=".util.MediaPlayerService"
            android:exported="false">
        </service>

        <activity android:name=".artist.ArtistSongsActivity">
        </activity>
    </application>

</manifest>
