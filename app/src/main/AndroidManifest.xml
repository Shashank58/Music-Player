<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cybrilla.musicplayer" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".android.AllSongsActivity"
            android:screenOrientation="portrait" >
        </activity>
        a
        <!-- <service android:name="cybrilla.musicplayer.MusicService"/> -->
        <activity
            android:name=".android.SongDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_song_detail"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity android:name=".android.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".android.AlbumsActivity" >
        </activity>
        <activity android:name=".android.ConnectActivity" >
        </activity>
    </application>

</manifest>
